%form{ :action => "/admin/works#{ '/' + @work.id.to_s unless @work.new_record? }", :method => :post }
  %dl
    %dt
      Title
    %dd
      %input{ :type => 'text', :name => 'title', :value => @work.title }
  %dl
    %dt
      Slug
    %dd
      %input{ :type => 'text', :name => 'slug', :value => @work.slug }
  %dl
    %dt
      Description
    %dd
      %textarea{ :name => 'description', :cols => 45, :rows => 15 }<>
        :preserve
          #{ @work.description }
  %p.submit
    - unless @work.new_record?
      %input{ :type => 'hidden', :name => '_method', :value => 'put' }
    %input{ :type => 'submit', :value => 'Save Work' }
